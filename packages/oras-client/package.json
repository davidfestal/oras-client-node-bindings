{
  "name": "@dfatwork-pkgs/oras-client",
  "version": "0.1.0",
  "description": "Node.js bindings for OCI Registry As Storage (ORAS) - Rust oci-client library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "src/generated/**/*.js",
    "src/generated/**/*.d.ts",
    "!dist/**/*.map",
    "!src/generated/**/*.node"
  ],
  "napi": {
    "binaryName": "oras-client-node-bindings",
    "targets": [
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-pc-windows-msvc",
      "x86_64-unknown-linux-gnu",
      "aarch64-unknown-linux-gnu"
    ]
  },
  "scripts": {
    "build:native": "cross-env-shell \"napi build --platform --release ${NAPI_TARGET} -o src/generated/\"",
    "build:native:debug": "cross-env-shell \"napi build --platform ${NAPI_TARGET} -o src/generated/\"",
    "build:ts": "tsc",
    "copy-generated": "shx mkdir -p dist/generated && shx ls src/generated/ && shx cp -f src/generated/*.js src/generated/*.d.ts src/generated/*.node dist/generated/",
    "build": "npm run build:native && npm run build:ts && npm run copy-generated",
    "build:debug": "npm run build:native:debug && npm run build:ts && npm run copy-generated",
    "clean": "shx rm -rf dist/ src/generated/ target/",
    "prepublishOnly": "npm run clean && npm run build && napi prepublish -t npm",
    "artifacts": "napi artifacts",
    "test": "jest",
    "test:e2e": "jest test/e2e.test.ts",
    "test:watch": "jest --watch",
    "version": "napi version"
  },
  "dependencies": {
    "tar": "^6.1.14"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.4.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.0.0",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.0.0",
    "@types/tar": "^6.1.0"
  },
  "engines": {
    "node": ">= 10"
  },
  "keywords": [
    "oras",
    "oci",
    "registry",
    "artifacts",
    "napi",
    "rust",
    "bindings"
  ],
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/davidfestal/oras-client-node-bindings",
    "directory": "packages/oras-client"
  }
}

